<ul class="list-group">
    {{#each posts}}
    <li class="list-group-item">
        <div class="">
            <a href="/post/{{id}}" class="fw-bold">{{title}}</a>
            - created by 
            <span class="fst-italic">{{user.username}}</span>
            on {{format_date createdAt}}
            <span class="badge rounded-pill">{{commentsCount}}</span>
        </div>
    </li>
    {{/each}}
</ul>